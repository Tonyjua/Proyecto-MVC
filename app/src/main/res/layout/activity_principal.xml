<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.PrincipalActivity">

    <Button
        android:onClick="registrarEmpresa"
        android:id="@+id/btn_registrar_empresas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registrar Empresa"
        app:layout_constraintBottom_toTopOf="@+id/btn_registrar_usuarios"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <Button
        android:onClick="registrarUsuario"
        android:id="@+id/btn_registrar_usuarios"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registrar Usuario"
        app:layout_constraintBottom_toTopOf="@+id/btn_lista_empresas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <Button
        android:onClick="listaEmpresas"
        android:id="@+id/btn_lista_empresas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lista Empresas"
        app:layout_constraintBottom_toTopOf="@+id/btn_lista_usuarios"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <Button
        android:onClick="listaUsuarios"
        android:id="@+id/btn_lista_usuarios"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lista Usuarios"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>